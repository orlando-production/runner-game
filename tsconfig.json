{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2019",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "types": ["webpack-env"],
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "files": ["src/index.d.ts"]
}
